<h1>View Article</h1>

  <%= @article.title %>
  <br>
  <%= @article.body %>
  <br>

  <h3>Comments(<%= @article.comments.size %>)</h3>
  <%= render partial: 'articles/comment', collection: @article.comments.reverse %>
  <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Do you really want to destroy the article?"} %><br>
  <%= link_to "Edit", edit_article_path(@article), data: {confirm: "Do you accept the changes?"} %><br>
  <%= render partial: 'comments/form' %>
  <p>
    Tags:
      <%= comma_seperated_links(@article.tags) %>
  </p>
  <%= link_to "<< Back to Articles List", articles_path %>
