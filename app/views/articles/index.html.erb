<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
  <p><strong>Article Title</strong></p>
  <li>
    <%= link_to article.title, article_path(article), class: 'article-title', id: "article-#{article.id}" %>
  </li>
  <p><strong>Article Body</strong></p>
  <li>
    <%= article.body %>
  </li>
  <% end %>

</ul>
<br>
<%= link_to 'Create a New Article', new_article_path, class: "new-article" %>
